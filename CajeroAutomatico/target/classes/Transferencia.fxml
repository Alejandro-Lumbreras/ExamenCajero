<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.stage.*?>

<Stage xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.app.Controller">
    <scene>
        <Scene fill="#322997">
            <AnchorPane prefHeight="330.0" prefWidth="384.0" style="-fx-background-color: #322997;">
            <children>
               <Label layoutX="18.0" layoutY="14.0" text="INGRESE EL MONTO A TRANSFERIR" textFill="WHITE">
                  <font>
                     <Font name="Droid Sans Mono" size="20.0" />
                  </font></Label>
               <TextField fx:id="txt_MontoTransferir" alignment="CENTER" layoutX="140.0" layoutY="46.0" onAction="#MontoTransferir" prefHeight="39.0" prefWidth="103.0" promptText="\$0">
                  <font>
                     <Font name="Droid Sans Mono" size="20.0" />
                  </font>
               </TextField>
               <TextField fx:id="txt_NumCuentaT" layoutX="112.0" layoutY="176.0" onAction="#NumCuentaTransferir" prefHeight="28.0" prefWidth="162.0" promptText="Numero de cuenta">
                  <font>
                     <Font name="Droid Sans Mono" size="14.0" />
                  </font>
               </TextField>
               <Label layoutX="30.0" layoutY="115.0" text="INGRESE EL NUMERO DE CUENTA" textFill="WHITE">
                  <font>
                     <Font name="Droid Sans Mono" size="20.0" />
                  </font>
               </Label>
               <Button fx:id="btnContinuarT" layoutX="206.0" layoutY="255.0" mnemonicParsing="false" onAction="#ContinuarT" style="-fx-background-color: #FF5500;" text="CONTINUAR" textFill="WHITE">
                  <font>
                     <Font name="Droid Sans Fallback" size="20.0" />
                  </font>
               </Button>
               <Button fx:id="btnVolver" layoutX="45.0" layoutY="255.0" mnemonicParsing="false" onAction="#Volver" style="-fx-background-color: #ff5500;" text="VOLVER" textFill="WHITE">
                  <font>
                     <Font name="Droid Sans Fallback" size="20.0" />
                  </font>
               </Button>
               <Label layoutX="74.0" layoutY="140.0" text="AL QUE VA A TRANSFERIR" textFill="WHITE">
                  <font>
                     <Font name="Droid Sans Mono" size="20.0" />
                  </font>
               </Label>
            </children>
            </AnchorPane>
        </Scene>
    </scene>
</Stage>
